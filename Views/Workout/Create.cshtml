<h2>Create Workout</h2>
<form>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" placeholder="Enter workout name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" placeholder="Enter description"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Duration (minutes)</label>
        <input type="number" class="form-control" placeholder="Enter duration" />
    </div>
    <div class="mb-3">
        <label class="form-label">Difficulty</label>
        <select class="form-control">
            <option>Beginner</option>
            <option>Intermediate</option>
            <option>Advanced</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Fitness Plan</label>
        <select class="form-control">
            <option>Beginner Strength Plan</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a href="/Workout/List" class="btn btn-secondary">Cancel</a>
</form>