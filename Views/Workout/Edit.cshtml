<h2>Edit Workout</h2>
<form>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" value="Strength Training" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control">A full-body strength workout</textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Duration (minutes)</label>
        <input type="number" class="form-control" value="45" />
    </div>
    <div class="mb-3">
        <label class="form-label">Difficulty</label>
        <select class="form-control">
            <option selected>Intermediate</option>
            <option>Beginner</option>
            <option>Advanced</option>
        </select>
    </div>
    <div class="mb-3">
        <label class="form-label">Fitness Plan</label>
        <select class="form-control">
            <option selected>Beginner Strength Plan</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/Workout/List" class="btn btn-secondary">Cancel</a>
</form>